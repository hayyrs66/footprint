---
import { getSession } from "auth-astro/server";
import Dialog from "../components/Dialog.astro";
import Calculate from "../components/Calculate.astro";
const session = await getSession(Astro.request);
---

<section
  class="bg-hero w-full h-screen bg-no-repeat bg-cover bg-center relative"
>
  <!-- Overlapping effects -->
  {
    !session && (
      <Dialog
        title="You must log in."
        description="To calculate your carbon footprint, you must log in."
      />
    )
  }
  <div class="vignette"></div>
  <div class="mask"></div>
  <!-- Main Grid Two Sections Container -->
  <div class="grid grid-cols-2 w-full h-full">
    <!-- First section grid -->
    <aside
      class="flex flex-col min-w-[600px] bg-[#101309]/20 backdrop-blur-lg w-fit h-full justify-between items-start p-[4rem]"
    >
      <div class="w-full h-full flex justify-start items-center z-[5]">
        <h2 class="text-[8rem] text-white tracking-[-0.8rem] leading-[0.8]">
          Make it
          <div class="flex w-full h-auto justify-end items-center">
            <img
              src="src/icons/globe.svg"
              width={80}
              height={80}
              class="animate-spin"
            />
            <span class="text-primary">Green</span>
          </div>
        </h2>
      </div>
    </aside>
    <!-- Second section grid -->
    <div
      class="w-full h-full flex flex-col justify-between items-start z-10 py-[4rem] pr-[4rem]"
    >
      <!-- Gap Div -->
      <div></div>
      <!-- Calculate button -->
      {
        session ? (
          <Calculate id="session-calculate" />
        ) : (
          <Calculate id="calculate" />
        )
      }
      <!-- Footer hero -->
      <div>
        <div class="flex justify-start items-center gap-5">
          <span class="text-white/50 font-bold text-[2rem]">01</span>
          <h1 class="text-[2rem] text-white tracking-tighter font-semibold">
            Calculate your footprint.
          </h1>
        </div>
        <div class="flex gap-x-16">
          <div></div>
          <p
            class="max-w-[382px] text-balance text-sm text-slate-300 tracking-tight"
          >
            Let's create a mindful digital world. Calculate your carbon
            footprint and learn how to reduce it.
          </p>
        </div>
      </div>
    </div>
  </div>
  <!-- {END} Main Grid Two Sections Container -->
</section>

<script>
  const dialog = document.getElementById("alert-dialog") as HTMLDialogElement;
  const calculateNoSessionBtn = document.getElementById(
    "calculate"
  ) as HTMLButtonElement;
  const calculateBtn = document.getElementById(
    "session-calculate"
  ) as HTMLButtonElement;

  if (dialog) {
    calculateNoSessionBtn.onclick = () => dialog.showModal();
  }

  if(calculateBtn){
    calculateBtn.onclick = () => {

      fetch("api/fetchData").then((res) => {
        if (res.status === 401) {
          console.log("You must log in to calculate your carbon footprint.");
        } else {
          window.location.href = "/dashboard";
        }
      });
      
      // window.location.href = "/dashboard";
    }
  }
  
</script>
<style>
  .vignette {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: radial-gradient(
      ellipse at center,
      rgba(0, 0, 0, 0) 45%,
      rgba(0, 0, 0, 0.7) 100%
    );
  }

  .mask {
    position: absolute;
    width: 100%;
    height: 100%;
    top: calc(50%);
    left: calc(50%);
    transform: translate(-50%, -50%);
    background-color: #101309;
    mask-image: linear-gradient(to bottom, transparent 50%, #101309 95%);
  }
</style>
