<style>
  button {
    all: unset;
    width: 100%;
    height: 100%;
  }

  section {
    width: 100%;
    height: 100%;
    background: #101309;
    padding: 5rem 1.5rem;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .wrapper {
    width: 100%;
    height: 100%;
    background-color: rgba(255, 250, 178, 0.05);
    transition: transform 200ms cubic-bezier(0.165, 0.84, 0.44, 1);
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .slider {
    position: relative;
    white-space: nowrap;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    gap: 1rem;
  }
  .slider p:nth-of-type(2) {
    position: absolute;
    left: 100%;
  }
  .slider p {
    color: #ebff6d;
    font-weight: 400;
    font-size: 80px;
    letter-spacing: -0.3rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .slider p span {
    font-style: italic;
    margin: 0 1rem;
  }

  .wrapper:hover {
    transform: scale(1.02);
  }

  .container {
    --b: 1px; /* thickness of the border */
    --c: #ebff6d; /* color of the border */
    --w: 20px; /* width of border */
    --_g: #0000 90deg, var(--c) 0;
    --_p: var(--w) var(--w) border-box no-repeat;
    background:
      conic-gradient(from 90deg at top var(--b) left var(--b), var(--_g)) 0 0 /
        var(--_p),
      conic-gradient(from 180deg at top var(--b) right var(--b), var(--_g)) 100%
        0 / var(--_p),
      conic-gradient(from 0deg at bottom var(--b) left var(--b), var(--_g)) 0
        100% / var(--_p),
      conic-gradient(from -90deg at bottom var(--b) right var(--b), var(--_g))
        100% 100% / var(--_p);
    width: 100%;
    height: 340px;
    position: relative;
    padding: 1.5rem;
    z-index: 2;
    backdrop-filter: blur(20px);
  }

  .bubble-2 {
    position: absolute;
    top: 70%;
    left: 70%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background-color: #ecff71;
    filter: blur(100px);
    opacity: 0.2;
    animation: blob 20s infinite ease-out;
  }
</style>
